{
	"css": {
		"parser": {
			"tailwindDirectives": true
		}
	},
	"files": {
		"includes": [
			"./*.ts",
			"./schema/**",
			"./src/**",
			"!**/*.gen.ts"
		]
	},
	"overrides": [
		{
			"includes": [
				"./src/**/*.css"
			],
			"linter": {
				"rules": {
					"suspicious": {
						"noUnknownAtRules": "off"
					}
				}
			}
		}
	]
}
